// Prisma Schema File

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ðŸ”¹ Model for Tech Stacks (Tools Used)
model TechStack {
  id       Int                @id @default(autoincrement())
  tool     String             @unique
  icon     String
  projects ProjectTechStack[]
}

// ðŸ”¹ Model for Projects
model Project {
  id          Int                @id @default(autoincrement())
  name        String
  description String
  liveUrl     String? // Made Optional
  githubUrl   String? // Made Optional
  video       String? // Made Optional
  logo        String? // Made Optional
  techStack   ProjectTechStack[]
  category    ProjectCategory
}

// ðŸ”¹ Enum for Project Categories
enum ProjectCategory {
  FULL_STACK
  FRONTEND_3D
  BLOCKCHAIN
}

// ðŸ”¹ Junction Table for Many-to-Many Relationship
model ProjectTechStack {
  id        Int       @id @default(autoincrement())
  project   Project   @relation(fields: [projectId], references: [id])
  projectId Int
  tech      TechStack @relation(fields: [techId], references: [id])
  techId    Int
}
